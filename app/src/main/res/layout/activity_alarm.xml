<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout3"
            app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cancel"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Czas alarmu: "
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/timeTextView"/>
            <TextView
                    android:text="HH:MM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/timeView"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Data alarmu:"
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:text="DD.MM.YYYY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="97dp"
                    android:id="@+id/dateView" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Miejsce: "
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content" android:id="@+id/destinationTextView"/>
            <TextView
                    android:text="Wybierz lokalizację"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/destinationView"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Opis:"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/descriptionTextView"/>
            <TextView
                    android:text="Uzupełnij opis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/descriptionView"
                    android:clickable="true"
            />
            <EditText
                    android:id="@+id/hidden_edit_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Uzupełnij opis"
                    android:visibility="gone">
            </EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <Button
                android:text="Zapisz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/saveAlarm"
                android:layout_marginBottom="8dp"
        />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>